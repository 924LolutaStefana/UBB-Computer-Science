<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/sky"
        android:scaleType="centerCrop"/>
    <RelativeLayout
        android:id="@+id/editRelativeLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/editTherapistTitle"
            android:layout_width="401dp"
            android:layout_height="42dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/light_blue"
            android:layout_marginBottom="10dp"
            android:text="Edit Therapist"
            android:textSize="28sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/editNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTherapistTitle"
            android:layout_alignStart="@+id/editTherapistNameText"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:text="Name" />

        <EditText
            android:id="@+id/editTherapistNameText"
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:layout_below="@id/editNameLabel"
            android:layout_marginStart="35dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="Enter Therapist Name"
            android:inputType="text"
            android:maxLines="1" />

        <TextView
            android:id="@+id/editAgeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editTherapistNameText"
            android:layout_alignStart="@+id/editAgeTextNumber"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text="Age" />

        <EditText
            android:id="@+id/editAgeTextNumber"
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:layout_below="@id/editTherapistNameText"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter Therapist Age" />

        <TextView
            android:id="@+id/editSpecializationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editAgeTextNumber"
            android:layout_alignStart="@+id/editSpecializationText"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text="Specialization" />

        <EditText
            android:id="@+id/editSpecializationText"
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:layout_below="@id/editAgeTextNumber"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Therapist Specialization" />

        <TextView
            android:id="@+id/editExperienceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editSpecializationText"
            android:layout_alignStart="@+id/editExperienceTextNumber"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text="Experience" />

        <EditText
            android:id="@+id/editExperienceTextNumber"
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:layout_below="@id/editSpecializationText"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="number"
            android:hint="Enter Therapist Experience" />

        <TextView
            android:id="@+id/editDescriptionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/editExperienceTextNumber"
            android:layout_alignStart="@+id/editDescriptionText"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="5dp"
            android:text="Description" />

        <EditText
            android:id="@+id/editDescriptionText"
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:layout_below="@id/editExperienceTextNumber"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Therapist Description" />

        <Button
            android:id="@+id/saveEditButton"
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:layout_below="@id/editDescriptionText"
            android:layout_marginStart="35dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:background="@color/light_blue"
            android:text="Save" />

        <Button
            android:id="@+id/cancelEditButton"
            android:layout_width="337dp"
            android:layout_height="55dp"
            android:layout_below="@id/saveEditButton"
            android:layout_marginStart="35dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="10dp"
            android:background="@color/light_blue"
            android:text="Cancel" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
