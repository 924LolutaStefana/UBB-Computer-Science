<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="#F2F2F2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTherapistName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Therapist Name"
                android:textSize="18sp"
                android:textColor="#333333" />

            <TextView
                android:id="@+id/textViewTherapistAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTherapistName"
                android:layout_marginTop="4dp"
                android:text="Age: "
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewTherapistSpecialization"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTherapistAge"
                android:layout_marginTop="4dp"
                android:text="Specialization: "
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewTherapistExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTherapistSpecialization"
                android:layout_marginTop="4dp"
                android:text="Experience: "
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/textViewTherapistDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textViewTherapistExperience"
                android:layout_marginTop="4dp"
                android:text="Description: "
                android:textSize="14sp"
                android:textColor="#666666" />

            <ImageView
                android:id="@+id/updateButton"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="1dp"
                android:layout_marginEnd="39dp"
                android:src="@drawable/baseline_edit_24" />

            <ImageView
                android:id="@+id/deleteButton"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/baseline_delete_24" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

